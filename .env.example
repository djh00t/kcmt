# PyPI Credentials
# For production PyPI releases
TWINE_USERNAME=__token__
TWINE_PASSWORD=your-pypi-token-here

# For TestPyPI releases (optional)
# TWINE_REPOSITORY=testpypi
# TWINE_USERNAME=__token__
# TWINE_PASSWORD=your-testpypi-token-here

# Alternative: Use .pypirc file instead of environment variables
# Create ~/.pypirc with your credentials

# kcmt runtime environment (used by the CLI and library)
# Required
GITHUB_TOKEN=your-github-token-here

# Optional
KLINGON_CMT_LLM_MODEL=openai/gpt-5-mini
KLINGON_CMT_LLM_ENDPOINT=https://models.github.ai/inference
KLINGON_CMT_GIT_REPO_PATH=.
KLINGON_CMT_MAX_COMMIT_LENGTH=72